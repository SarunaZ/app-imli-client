{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": "./src",
    "paths": {
      "*": ["*"]
    },
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "preserve",
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/*.tsx",
    "public/serviceWorker.js"
  ],
  "exclude": ["node_modules"]
}
