{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": "./src",
    "paths": {
      "*": ["*"]
    },
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "react",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/*.tsx"],
  "exclude": ["node_modules"]
}
